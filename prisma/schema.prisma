generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id           Int      @id @default(autoincrement())
  userId       String
  title        String
  description  String
  index        Int
  status       String?  @default("new")
  userSpecificData User @relation(fields: [userId], references: [userId])
}

model User {
  id        Int    @id @default(autoincrement())
  userId    String @unique
  tasks     Task[]
}

